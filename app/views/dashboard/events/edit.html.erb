<% if @event.errors.any? %>
  <%= render "shared/errors", item: @event %>
<% end %>

<%= form_for [current_user, @event], url: dashboard_user_event_path do |f|%>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :date %>
  <%= f.date_select :date %>
  <%= f.select_recurring :recurring_rule %>
  <%= f.submit %>
<% end %>